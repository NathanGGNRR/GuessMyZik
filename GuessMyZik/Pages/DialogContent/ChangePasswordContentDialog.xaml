<ContentDialog
    x:Class="GuessMyZik.Pages.DialogContent.ChangePasswordContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuessMyZik.Pages.DialogContent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="3" Text="Password changed with success !" Margin="5"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontFamily="Kaushan Script" Foreground="{StaticResource SecondaryColor}"/>
        <Button x:Name="BtnHome" Grid.Row="1" Style="{StaticResource BtnSecondary}" Background="{StaticResource SecondaryColor}" BorderBrush="{StaticResource SecondaryDarkColor}" Foreground="{StaticResource SecondaryColor}" FontFamily="Kaushan Script"  Content="Go Home"  Click="BtnHome_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</ContentDialog>
