<ContentDialog
    x:Class="GuessMyZik.Pages.DialogContent.EndGuestContentDialogSolo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuessMyZik.Pages.DialogContent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <PersonPicture x:Name="personPicture" Width="50" VerticalAlignment="Center" BackgroundSizing="InnerBorderEdge" />
            <TextBlock x:Name="textCongratsGuest" Foreground="{StaticResource SecondaryColor}" FontFamily="Kaushan Script"  Text="Blind Test is finish" FontSize="20" VerticalAlignment="Center" Margin="10 0 0 0" HorizontalAlignment="Left"/>
        </StackPanel>
        <Button x:Name="BtnMainPage" Grid.Row="1" Style="{StaticResource BtnSecondary}" Background="{StaticResource SecondaryColor}" BorderBrush="{StaticResource SecondaryDarkColor}" Foreground="{StaticResource SecondaryColor}" FontFamily="Kaushan Script"  Content="Go Home"  Click="BtnMainPage_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="True"/>
    </Grid>
</ContentDialog>
