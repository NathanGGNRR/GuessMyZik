                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Foreground="{StaticResource ThirdColor}" FontFamily="Kaushan Script"  Text="number of tracks:" FontSize="17" Margin="0 0 4 0"/>
